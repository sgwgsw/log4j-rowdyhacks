<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="LOGJ2 %d [%-6p] %c{1} – %m%n"/>
        </Console>
        <RollingFile name="log4jfile" fileName="/opt/tomcat/logs/log4jlogs.log" filePattern="/opt/tomcat/logs/log4jlogs-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <pattern>
                    "LOG4J2 %d [%-6p] %c{1} – %m%n"
                </pattern>
            </PatternLayout>   
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <appenderRef ref="Console"/>
            <appenderRef ref="log4jfile"/>
        </Root>
    </Loggers>
</Configuration>
