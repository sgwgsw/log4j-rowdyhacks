<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="LOGJ2 %d [%-6p] %c{1} – %m%n"/>
        </Console>
        <RollingFile name="log4jfile" fileName="/opt/tomcat/apache-tomcat-8.0.53/logs/log4jlogs.log" filePattern="/opt/tomcat/apache-tomcat-8.0.53/logs/log4jlogs-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="LOGJ2 %d [%-6p] %c{1} – %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20 MB"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <appenderRef ref="Console"/>
            <appenderRef ref="log4jfile"/>
        </Root>
    </Loggers>
</Configuration>
